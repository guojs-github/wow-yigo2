<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Form Caption="密码设置" Key="ChangePassWord" Version="8">
    <Body PopWidth="500px" PopHeight="360px">
        <Block>
            <FlexFlowLayoutPanel Key="main">
                <GridLayoutPanel Key="Basic" Caption="密码设置" Height="100%" Padding="5px">
                    <Label Key="L_OPERATOR" Caption="操作员" X="0" Y="1">
                        <Format HAlign="Right"/>
                    </Label>
                    <Dict Key="OPERATOR" Caption="操作员" ItemKey="Operator" X="1" Y="1" Visible="false">
                        <DataBinding DefaultFormulaValue="GetOperator()"/>
                    </Dict>
                    <Label Key="OPERATOR_NAME" Caption="操作员" X="1" Y="1">
                        <DataBinding DefaultFormulaValue="GetDictValue('Operator',OPERATOR,'Name')"/>
                    </Label>
                    <Label Key="L_PASSWORD" Caption="原密码" X="0" Y="2">
                        <Format HAlign="Right"/>
                    </Label>
                    <PasswordEditor Key="PASSWORD" Caption="原密码" PromptText="请输入原密码" X="1" Y="2" XSpan="3"/>
                    <Label Key="L_NEW_PASSWORD" Caption="新密码" X="0" Y="3">
                        <Format HAlign="Right"/>
                    </Label>
                    <PasswordEditor Key="NEW_PASSWORD" Caption="新密码" PromptText="请输入新密码" X="1" Y="3" XSpan="3"/>
                    <Label Key="L_CONFIRM_PASSWORD" Caption="密码确认" X="0" Y="4">
                        <Format HAlign="Right"/>
                    </Label>
                    <PasswordEditor Key="CONFIRM_PASSWORD" Caption="密码确认" PromptText="请再次输入新密码" X="1" Y="4" XSpan="3">
                        <DataBinding CheckRule="NEW_PASSWORD==CONFIRM_PASSWORD" ErrorInfo="两次输入的密码不一致"/>
                    </PasswordEditor>
                    <Button Key="OK" Caption="确认" X="3" Y="6">
                        <OnClick>
                            <![CDATA[
								UICheck();ChangePWD(OPERATOR,PASSWORD ,NEW_PASSWORD);Close();
							]]>
                        </OnClick>
                    </Button>
                    <Button Key="Cancel" Caption="取消" X="2" Y="6">
                        <OnClick>
                            <![CDATA[
								Close();
							]]>
                        </OnClick>
                    </Button>
                    <RowDefCollection RowHeight="25" RowGap="10">
                        <RowDef Height="10px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="30px"/>
                        <RowDef Height="20px"/>
                        <RowDef/>
                        <RowDef Height="10px"/>
                    </RowDefCollection>
                    <ColumnDefCollection ColumnGap="10">
                        <ColumnDef Width="80px"/>
                        <ColumnDef Width="100%"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="100px"/>
                        <ColumnDef Width="20px"/>
                    </ColumnDefCollection>
                </GridLayoutPanel>
            </FlexFlowLayoutPanel>
        </Block>
    </Body>
</Form>
