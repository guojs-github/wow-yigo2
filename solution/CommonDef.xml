<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<CommonDef>
    <OperationCollection>
        <Operation Key="WFLog" Caption="审批记录">
            <Action>
                <![CDATA[ShowModal('WFLog', {
            pOID:{GetOID()},
            processKey:{GetProcessKey()},
            processVer:{GetProcessVer()}
                    })]]>
            </Action>
        </Operation>
    </OperationCollection>
    <StatusCollection>
        <Status Caption="已输入" Key="PREPARED" Value="100"/>
        <Status Caption="已启用" Key="ENABLED" Value="200"/>
        <Status Caption="已停用" Key="DISABLED" Value="300"/>
    </StatusCollection>
    <ScriptCollection>
        <Script Key="Load" Caption="载入" Description="载入事件" Range="Action" Verb="Load">
            <![CDATA[
				LoadData()
			]]>
        </Script>
        <Script Key="Save" Caption="保存" Description="保存事件" Range="Action" Verb="Save">
            <![CDATA[
				SaveData()
			]]>
        </Script>
    </ScriptCollection>
    <MacroCollection>
        <Macro Key="selectAll" Args="grid,flag">
            <![CDATA[// 表格全选或者取消表格选择
var count = GetRowCount(grid, false);
var row = 0;
// Confirm("grid row count="&count);
while (row < count) {
    SetCellValue(grid, row, "select", flag);
    row = row + 1;
}
]]>
        </Macro>
    </MacroCollection>
</CommonDef>
